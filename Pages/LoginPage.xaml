<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarkKoduKK.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Logi sisse" 
                   FontSize="32" 
                   HorizontalOptions="Center" />

            <Entry x:Name="UserIdEntry"
                   Placeholder="Kasutaja ID" 
                   Keyboard="Default" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Parool" 
                   IsPassword="True" />

            <Button Text="Sisene"
                    Clicked="LoginClicked"/>

            <Label x:Name="MessageLabel" 
                   TextColor="Red" 
                   IsVisible="False"
                   HorizontalOptions="Center" />
            
            <Button Text="Registreeru"
                    Clicked="RegisterClicked"
                    BackgroundColor="Transparent"
                    TextColor="DarkBlue"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
