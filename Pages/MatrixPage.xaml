<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarkKoduKK.MatrixPage"
             Title="LED Matrix Controller
             ">

    <VerticalStackLayout>
        <GraphicsView x:Name="MatrixCanvas"
              HeightRequest="320"
              WidthRequest="320"
              BackgroundColor="Black"
               >
            <GraphicsView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCanvasTapped" />
                <PanGestureRecognizer PanUpdated="OnCanvasPanUpdated" />
            </GraphicsView.GestureRecognizers>
        </GraphicsView>

        <Grid ColumnSpacing="5"
              RowSpacing="5"
              Padding="10"
              HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    BackgroundColor="Red"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="1"
                    BackgroundColor="Orange"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="2"
                    BackgroundColor="Yellow"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="3"
                    BackgroundColor="Green"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="4"
                    BackgroundColor="LightBlue"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="5"
                    BackgroundColor="Blue"
                    Clicked="OnColorButtonClicked"/>

            <Button Grid.Column="6"
                    BackgroundColor="Purple"
                    Clicked="OnColorButtonClicked"/>
        </Grid>

        <Grid ColumnSpacing="5"
              RowSpacing="5"
              Padding="10"
              HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    ImageSource="fill_icon.png"  
                    Background="White"
                    />
            
            <Button Grid.Column="1  "
                    ImageSource="clear_icon.png"  
                    Background="White"
                    Clicked="ClearCanvas"/>
        </Grid>

        <Label x:Name="ConnectionStatus"
               Text="Disconnected"
               TextColor="Red"
               HorizontalOptions="End"
               Margin="10"/>
    </VerticalStackLayout>
</ContentPage>
