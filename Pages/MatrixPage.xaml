<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarkKoduKK.LoginPage"
             Title="Вход">

    <ContentPage.Content>
        <Grid Padding="30" RowSpacing="15" ColumnSpacing="10">

            <!-- Определяем строки -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Логин -->
                <RowDefinition Height="Auto"/>
                <!-- Пароль -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка Войти -->
                <RowDefinition Height="Auto"/>
                <!-- Сообщение об ошибке -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка показать регистрацию -->
                <RowDefinition Height="Auto"/>
                <!-- Форма регистрации -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Label Text="Login" FontSize="32" HorizontalOptions="Center" Grid.Row="0" />

            <!-- Логин -->
            <Entry x:Name="UsernameEntry" Placeholder="Username" Keyboard="Default" Grid.Row="1" />

            <!-- Пароль -->
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Grid.Row="2" />

            <!-- Кнопка Войти -->
            <Button Text="Login" Clicked="OnLoginClicked" Grid.Row="3" />

            <!-- Сообщение об ошибке -->
            <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" Grid.Row="4" />

            <!-- Кнопка показать/скрыть форму регистрации -->
            <Button x:Name="ToggleRegisterButton"
                    Text="Зарегистрироваться"
                    Clicked="ToggleRegisterForm"
                    BackgroundColor="Transparent"
                    TextColor="Blue"
                    Grid.Row="5" />

            <!-- Форма регистрации -->
            <StackLayout x:Name="RegisterForm"
                         IsVisible="False"
                         Spacing="10"
                         Padding="10"
                         BackgroundColor="#EEE"
                         Grid.Row="6">

                <Entry x:Name="RegNameEntry" Placeholder="Имя" />
                <Entry x:Name="RegEmailEntry" Placeholder="Email" Keyboard="Email" />
                <Entry x:Name="RegPasswordEntry" Placeholder="Пароль" IsPassword="True" />
                <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" />

            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
